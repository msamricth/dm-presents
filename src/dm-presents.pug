include video-mixins
mixin headerFeature(videoURL, videoALT, pageURL, title)
	.fm-hero
		.fm-hero-background
			.fm-hero-video
				video(loop autoplay muted playsinline)
					source(src=`${videoURL}` type="video/mp4" alt=`${videoALT}`)
			.fm-hero-fade
			.fm-hero-tear
		
		.fm-hero-content
			.fm-hero-title
				h1!= title
			.fm-hero-details
				a.fm-hero-play(href=`${pageURL}`) Watch Film
	
block header

style
	include shared.css
	include home.css
	include episodeList.css

.fm-container
	+headerFeature("https://dm-us-imgs.s3.us-west-2.amazonaws.com/AW22/DMpresent/S3E6-NYC/nyc_event_06_teaser_1920x1080.mp4", "dm-presents-february-nyc", "/us/en/dm-presents-february-nyc", "Black History Month - NYC")
	img.fm-logo(src='https://dm-us-imgs.s3.us-west-2.amazonaws.com/AW21/L/DMPresents/S3E2/DMs-Presents-Logo.png' alt='DM Presents Logo' width='145')
	.fm-message.text-center
		span Dr. Martens Presents is back with free live shows. We're bringing some of our favorite bands, DJs, and performers to venues and Docs stores across LA, Chicago, NYC, and Austin. So, grab a friend, RSVP, and celebrate live music with us.
