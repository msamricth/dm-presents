- var episodes = [ali, gabe, lrw, rosehardt, tolliver, clay, blimesNGab, sunflower]

mixin episodeItem(episode)
	a.fm-episodes-item(href!=`${episode.url}`)
		.fm-episodes-item-main
			.fm-video-thumbnail
				+thumbnailVideo(episode.relativePath, episode.videoStart)
				.fm-video-thumbnail-play-icon
					svg(width="14" height="14")
						polygon(points="0,0,14,7,0,14" style="fill:#000;")
			.fm-episodes-item-title
				h3= episode.title
				if episode.isNew
					span.fm-video-thumbnail-new-tag new
		p!= episode.description 

.fm-episodes
	h2 Episodes 

	.fm-episodes-collection 
		a.fm-episodes-prev(href="#")
			+svgLeftArrow()
		a.fm-episodes-next(href="#")
			+svgRightArrow()
		.fm-episodes-item-container
			each episode in episodes
				+episodeItem(episode) 
